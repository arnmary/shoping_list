{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "target": "ES6",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["DOM","ES2015"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
